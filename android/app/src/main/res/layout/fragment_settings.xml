<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <TextView
        android:id="@+id/ipAddressDisp"
        android:layout_width="130sp"
        android:layout_height="30sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:text="IP Address:"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connectedDisp"
        android:layout_width="130sp"
        android:layout_height="30sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="60sp"
        android:text="Connected:"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tokenDisp"
        android:layout_width="130sp"
        android:layout_height="30sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="100sp"
        android:text="Token:"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/testServo"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="60sp"
        android:text="Test Servo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokenDisp" />

    <Button
        android:id="@+id/testLED"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="120sp"
        android:text="Test LED"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokenDisp" />

    <Button
        android:id="@+id/testPhoto"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="180sp"
        android:text="Test Photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokenDisp" />

    <Button
        android:id="@+id/testWeight"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="240sp"
        android:text="Test Weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokenDisp" />

    <Button
        android:id="@+id/forceDispense"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="211dp"
        android:text="Force Dispense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testWeight" />

    <Button
        android:id="@+id/wipeHistory"
        android:layout_width="160sp"
        android:layout_height="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:text="Wipe History"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reboot" />

    <Button
        android:id="@+id/wipeSchedules"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="20sp"
        android:text="Wipe Schedules"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forceDispense" />

    <Button
        android:id="@+id/reboot"
        android:layout_width="160sp"
        android:layout_height="40sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:text="Reboot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testWeight" />

    <TextView
        android:id="@+id/isConnected"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60sp"
        android:layout_marginEnd="100dp"
        android:text="No"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/connectedDisp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photoDisplay"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="30dp"
        android:text="False"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@id/testPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weightDisplay"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="30dp"
        android:text="500g"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@id/testWeight"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editToken"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="*********"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tokenDisp"
        app:layout_constraintTop_toBottomOf="@+id/isConnected" />

    <EditText
        android:id="@+id/editIP"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30sp"
        android:ems="10"
        android:inputType="text"
        android:text="192.168.1.1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toEndOf="@id/ipAddressDisp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/servoTime"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="number"
        android:text="1000"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toEndOf="@+id/testServo"
        app:layout_constraintTop_toBottomOf="@id/tokenDisp" />

    <EditText
        android:id="@+id/ledBlinkCount"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="number"
        android:text="10"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/testServo"
        app:layout_constraintTop_toBottomOf="@id/tokenDisp" />

    <Button
        android:id="@+id/servoTimeDown"
        android:layout_width="50sp"
        android:layout_height="25sp"
        android:padding="0sp"
        android:text="▼"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/servoTime"
        app:layout_constraintTop_toBottomOf="@id/servoTimeUp" />

    <Button
        android:id="@+id/servoTimeUp"
        android:layout_width="50sp"
        android:layout_height="25sp"
        android:layout_marginTop="60sp"
        android:padding="0sp"
        android:text="▲"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/servoTime"
        app:layout_constraintTop_toBottomOf="@id/tokenDisp" />

    <Button
        android:id="@+id/ledUP"
        android:layout_width="50sp"
        android:layout_height="25sp"
        android:layout_marginTop="120dp"
        android:padding="0sp"
        android:text="▲"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ledBlinkCount"
        app:layout_constraintTop_toBottomOf="@id/tokenDisp" />

    <Button
        android:id="@+id/ledDown"
        android:layout_width="50sp"
        android:layout_height="25sp"
        android:padding="0sp"
        android:text="▼"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/ledBlinkCount"
        app:layout_constraintTop_toBottomOf="@id/ledUP" />

</androidx.constraintlayout.widget.ConstraintLayout>